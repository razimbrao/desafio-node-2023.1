// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  name     String?
  password String
  category String
  city     String
  address  String
  phone    String?
  products Product[]
  orders   Order[]

  @@map("restaurants")
}

model Product {
  id           Int        @id @default(autoincrement())
  name         String
  description  String
  price        Decimal
  category     String
  restaurantId Int
  orders       Order[]
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])

  @@map("products")
}

model Order {
  id             Int        @id @default(autoincrement())
  total_value    Decimal
  client_name    String
  client_city    String
  client_address String
  client_phone   String
  restaurantId   Int
  products       Product[]
  restaurant     Restaurant @relation(fields: [restaurantId], references: [id])

  @@map("orders")
}
