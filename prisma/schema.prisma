// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id       Int        @id @default(autoincrement())
  email    String     @unique
  name     String?
  password String
  category String
  city     String
  address  String
  phone    String?
  Products Product[]
  Orders   Order[]
	@@map("restaurants")
}

model Product {
  id           Int         @id @default(autoincrement())
  name         String
  description  String
  price        String
  category     String
  restaurantId Int
  orders       Order[]
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
	@@map("products")
}

model Order {
  id             Int         @id @default(autoincrement())
  products       Product[]
  total_value    Float
  client_name    String
  client_city    String
  client_address String
  client_phone   String
  restaurantId   Int
  restaurant     Restaurant @relation(fields: [restaurantId], references: [id])
	@@map("orders")
}
